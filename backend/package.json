{
    "name": "@drill-down/backend",
    "description": "Backend",
    "version": "1.0.0",
    "author": "Ricardo Rinc√≥n",
    "private": true,
    "license": "MPL-2.0",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "prettier": "prettier --config ./.prettierrc.json --write './**/*.{ts,tsx,json,html,scss,md}'",
        "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/server.ts dotenv_config_path=.production.env",
        "start:dev": "ts-node -r tsconfig-paths/register -r dotenv/config src/server.ts dotenv_config_path=.env",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@drill-down/interfaces": "1.0.0",
        "@nestjs/common": "7.0.0",
        "@nestjs/core": "7.0.0",
        "@nestjs/jwt": "7.0.0",
        "@nestjs/mongoose": "6.4.0",
        "@nestjs/passport": "7.0.0",
        "@nestjs/platform-express": "7.0.0",
        "@nestjs/swagger": "4.5.1",
        "aws-sdk": "2.656.0",
        "axios": "0.19.2",
        "bcrypt": "4.0.1",
        "class-transformer": "0.2.3",
        "class-validator": "0.11.1",
        "connect-redis": "4.0.4",
        "express-session": "1.17.1",
        "lodash": "4.17.15",
        "moment": "2.27.0",
        "mongoose": "5.9.7",
        "multer-s3": "2.9.0",
        "passport": "0.4.1",
        "passport-jwt": "4.0.0",
        "passport-tumblr": "0.1.2",
        "redis": "3.0.2",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "6.5.4",
        "swagger-ui-express": "4.1.4",
        "tumblr.js": "2.0.2"
    },
    "devDependencies": {
        "@nestjs/cli": "7.1.2",
        "@nestjs/schematics": "7.0.0",
        "@nestjs/testing": "7.0.0",
        "@types/axios": "0.14.0",
        "@types/bcrypt": "3.0.0",
        "@types/connect-redis": "0.0.18",
        "@types/express": "4.17.3",
        "@types/express-session": "1.17.4",
        "@types/jest": "25.1.4",
        "@types/lodash": "4.14.149",
        "@types/moment": "2.13.0",
        "@types/mongoose": "5.7.10",
        "@types/node": "13.9.1",
        "@types/supertest": "2.0.8",
        "@typescript-eslint/eslint-plugin": "2.23.0",
        "@typescript-eslint/parser": "2.23.0",
        "dotenv": "8.2.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.0",
        "eslint-plugin-import": "2.20.1",
        "husky": "4.2.3",
        "jest": "25.1.0",
        "lint-staged": "10.1.1",
        "prettier": "1.19.1",
        "supertest": "4.0.2",
        "ts-jest": "26.0.0",
        "ts-loader": "6.2.1",
        "ts-node": "8.6.2",
        "tsconfig-paths": "3.9.0",
        "typescript": "3.7.4"
    },
    "lint-staged": {
        "*.{ts,tsx,json,html,scss,md}": [
            "prettier --write"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
