{
  "name": "@drill-down/root",
  "version": "1.0.0",
  "description": "drill down",
  "repository": "git@github.com:rrriki/drill-down.git",
  "author": "Ricardo Rincon <ricardo_rm25@hotmail.com>",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start:backend": "yarn --cwd ./backend start",
    "start:frontend": "yarn --cwd ./frontend start:dev",
    "preinstall": "yarn --cwd ./@common build",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:build": "find . -name 'build' -type d -prune -exec rm -rf '{}' +",
    "clean": "rm yarn.lock && npm run clean:node_modules && npm run clean:build"
  },
  "workspaces": {
    "packages": [
      "@common",
      "backend",
      "frontend"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/babel*",
      "**/eslint**",
      "**/jest",
      "**/*react*",
      "**/*redux*"
    ]
  },
  "dependencies": {
    "typescript": "4.8.4",
    "axios": "0.21.0",
    "lodash": "4.17.20",
    "moment": "2.27.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.0",
    "@types/lodash": "4.14.160"
  }
}
